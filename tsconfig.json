{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ES2020",
    "target": "es6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES6"
    }
  }
}